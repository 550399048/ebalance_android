<?xml version="1.0" encoding="utf-8"?>
<com.eui.ebalance.widget.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.eui.ebalance.widget.SquareLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/fragment_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center">

            <TextView
                android:id="@+id/fragment_item_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体脂(12)"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/fragment_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:background="@drawable/home_dynamic_list_item_txt_shape"
            android:text="标准"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </com.eui.ebalance.widget.SquareLinearLayout>
</com.eui.ebalance.widget.MaterialRippleLayout>